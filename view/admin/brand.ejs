<%- include("../../view/partials/admin/header") %>
<style>
  /* Container Styles */
  .content-main {
    padding: 2.5rem;
    background-color: #fafafa;
  }

  .content-title {
    font-size: 2rem;
    font-weight: 600;
    color: #1a1a1a;
    margin-bottom: 2.5rem;
    letter-spacing: 0.5px;
  }

  /* Form Styles */
  .form-label {
    font-size: 0.95rem;
    font-weight: 500;
    color: #2c2c2c;
    margin-bottom: 0.5rem;
  }

  .form-control {
    padding: 0.75rem;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    margin-bottom: 1.5rem;
    transition: all 0.3s ease;
  }

  .form-control:focus {
    border-color: #2c2c2c;
    box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.1);
  }

  /* Table Styles */
  .table {
    margin-top: 1rem;
    border-collapse: separate;
    border-spacing: 0 0.5rem;
  }

  .table th {
    font-weight: 600;
    color: #1a1a1a;
    padding: 1rem;
    background: #f5f5f5;
    border: none;
  }

  .table td {
    padding: 1rem;
    vertical-align: middle;
    border: none;
    background: white;
  }

  /* Button Styles */
  .btn {
    padding: 0.6rem 1.2rem;
    border-radius: 6px;
    font-weight: 500;
    transition: all 0.3s ease;
    text-decoration: none;
    border: none;
  }

  .btn-primary {
    background-color: #2c2c2c;
    color: white;
  }

  .btn-primary:hover {
    background-color: #1a1a1a;
    transform: translateY(-1px);
  }

  .btn-success {
    background-color: #4a4a4a;
    color: white !important;
  }

  .btn-success:hover {
    background-color: #333333;
    transform: translateY(-1px);
  }

  .btn-danger {
    background-color: #1f1f1f;
    color: white !important;
  }

  .btn-danger:hover {
    background-color: #000000;
    transform: translateY(-1px);
  }

  /* Status Badge Styles */
  .badge {
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: 500;
    font-size: 0.85rem;
  }

  .alert-success {
    background-color: #2c2c2c;
    color: white;
  }

  .alert-danger {
    background-color: #1a1a1a;
    color: white;
  }

  /* Image Upload Styles */
  .input-upload {
    padding: 1.5rem;
    border: 2px dashed #e0e0e0;
    border-radius: 8px;
    margin-bottom: 1.5rem;
    text-align: center;
    background: #fafafa;
  }

  #imagePreview {
    max-width: 150px;
    margin: 1rem auto;
    border-radius: 8px;
  }

  /* Brand Logo Styles */
  .brand-logo {
    width: 45px;
    height: 45px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid #e0e0e0;
  }

  /* Action Buttons Container */
  .action-buttons {
    display: flex;
    gap: 0.5rem;
  }

  a {
    text-decoration: none;
  }

  .table tbody tr:hover td {
    background-color: #f8f8f8;
    transition: background-color 0.3s ease;
  }
</style>

<section class="content-main">
    <div class="content-header">
        <h2 class="content-title">Brands</h2>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <form method="POST" action="/admin/addBrand" enctype="multipart/form-data">
                        <div class="mb-4">
                            <label for="brandName" class="form-label">Brand Name</label>
                            <input type="text" name="brandName" id="brandName" placeholder="Type here" class="form-control" required />
                        </div>
                        <label for="brandImage" class="form-label">Brand Image</label>
                        <div class="input-upload">
                            <img src="" alt="" id="imagePreview"/>
                            <input class="form-control" name="brandImage" id="brandImage" type="file" required />
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-primary" type="submit">Add Brand</button>
                        </div>
                    </form>
                </div>
                <div class="col-md-8 offset-md-1">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Brand Name</th>
                                    <th>Logo</th>
                                    <th>Created Date</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% brands.forEach(brand => { %>
                                <tr>
                                    <td><%= brand.brandName %></td>
                                    <td>
                                        <img src="<%= brand.brandImage[0] %>" alt="<%= brand.brandName %>" class="brand-logo"/>
                                    </td>
                                    <td><%= new Date(brand.createdAt).toLocaleDateString() %></td>
                                    <td>
                                        <% if (brand.isBlocked) { %>
                                            <span class="badge alert-danger">Blocked</span>
                                        <% } else { %>
                                            <span class="badge alert-success">Active</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            <% if (brand.isBlocked) { %>
                                                <a href="/admin/brands/toggle-status/<%= brand._id %>" class="btn btn-success">Unblock</a>
                                            <% } else { %>
                                                <a href="/admin/brands/toggle-status/<%= brand._id %>" class="btn btn-danger">Block</a>
                                            <% } %>
                                            <a href="/admin/brands/delete/<%= brand._id %>" class="btn btn-danger">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<%- include("../../view/partials/admin/footer") %>