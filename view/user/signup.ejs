      <div class="container">
         <header>Sign up</header>
         <form action="/signup" method="post" id="signupForm">
            <div class="input-field">
                <input type="text" placeholder="Full Name" id="name" name="name" required />
                <div class="error" id="error1"></div>
                </div>
                <div class="input-field">
                <input type="email" placeholder="Email" id="email" name="email" required />
                <div class="error" id="error2"></div>
                </div>
                <div class="input-field">
                <input type="text" placeholder="Phone" id="phone" name="phone" required />
                <div class="error" id="error3"></div>
                </div>
                <div class="input-field">
                <input type="password" placeholder="Password" id="password" name="password" required />
                <div class="error" id="error4"></div>
                </div>
                <div class="input-field">
                <input type="password" placeholder="Confirm Password" id="confirm-password" name="Cpassword" required />
                <div class="error" id="error5"></div>
                </div>
                <%if(locals.message && message.length>0){%>
                    <div class ="alert alert-danger text-center">
                        <%=message%>
                    </div>
                <%}%>
            
            <div class="button">
               <div class="inner"></div>
               <button type="submit"> sign UP </button>
            </div>
         </form>
         <div class="auth">
            Or sign up with
         </div>
         <div class="links">
            <div class="facebook">
               <i class="fab fa-facebook-square"><span>Facebook</span></i>
            </div>
            <div class="google">
                <a href="/auth/google" class="social"><i class="fab fa-google-plus-square"><span>Google</span></i></a>
            </div>
         </div>
         <div class="signup">
            Not a member? <a href="#">Signup now</a>
