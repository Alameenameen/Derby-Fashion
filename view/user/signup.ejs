                    <div class ="alert alert-danger text-center">
                        <%=message%>
                    </div>
                <%}%>
            
            <div class="button">
               <div class="inner"></div>
               <button type="submit"> sign UP </button>
            </div>
         </form>
         <div class="auth">
            Or sign up with
         </div>
         <div class="links">
            <div class="facebook">
               <i class="fab fa-facebook-square"><span>Facebook</span></i>
            </div>
            <div class="google">
                <a href="/auth/google" class="social"><i class="fab fa-google-plus-square"><span>Google</span></i></a>
            </div>
         </div>
         <div class="signup">
            Not a member? <a href="#">Signup now</a>
         </div>
