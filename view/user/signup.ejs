    function phoneValidateChecking() {
    const phoneVal = phoneid.value.trim();
    const phonePattern = /^[6-9]\d{9}$/;

    if (phoneVal === "" || phoneVal.length !== 10) {
        Error3.style.display = "block";
        Error3.innerHTML = "Phone number must be exactly 10 digits.";
        return false;
    } else if (!phonePattern.test(phoneVal)) {
        Error3.style.display = "block";
        Error3.innerHTML = "Please enter a valid 10-digit mobile number starting with 6-9.";
        return false;
    } else if (/^(.)\1{9}$/.test(phoneVal)) {
        Error3.style.display = "block";
        Error3.innerHTML = "Phone number cannot contain all same digits.";
        return false;
    } else {
        Error3.style.display = "none";
        return true;
    }
}

    function passValidateChecking() {
    const passVal = passid.value.trim();
    const cpassVal = cPasswordid.value.trim();
    
    // Regular expressions for different password requirements
    const lengthRegex = /.{8,}/;
    const uppercaseRegex = /[A-Z]/;
    const lowercaseRegex = /[a-z]/;
    const numberRegex = /\d/;
    const specialCharRegex = /[@$!%*?&]/;

    let valid = true;

    // Check length
    if (!lengthRegex.test(passVal)) {
        Error4.style.display = "block";
        Error4.innerHTML = "Password must be at least 8 characters long.";
        valid = false;
    } 
    // Check uppercase
    else if (!uppercaseRegex.test(passVal)) {
        Error4.style.display = "block";
        Error4.innerHTML = "Password must contain at least one uppercase letter.";
        valid = false;
    } 
    // Check lowercase
    else if (!lowercaseRegex.test(passVal)) {
        Error4.style.display = "block";
        Error4.innerHTML = "Password must contain at least one lowercase letter.";
        valid = false;
    } 
    // Check number
    else if (!numberRegex.test(passVal)) {
        Error4.style.display = "block";
        Error4.innerHTML = "Password must contain at least one number.";
        valid = false;
    } 
    // Check special character
    else if (!specialCharRegex.test(passVal)) {
        Error4.style.display = "block";
        Error4.innerHTML = "Password must contain at least one special character (@$!%*?&).";
        valid = false;
    } 
    else {
        Error4.style.display = "none";
    }

    // Check password match
    if (passVal !== cpassVal) {
        Error5.style.display = "block";
        Error5.innerHTML = "Passwords do not match.";
        valid = false;
    } else {
        Error5.style.display = "none";
    }

    return valid;
}



